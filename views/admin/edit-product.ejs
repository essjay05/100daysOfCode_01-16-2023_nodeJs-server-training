<%- include('../global/head.ejs') %>
  <link href="/css/forms.css" rel="stylesheet"/>
  <link href="/css/product.css" rel="stylesheet"/>
</head>
<body>
  <%- include('../global/nav.ejs') %>
  <main>
    <h1><%= pageTitle %></h1>
    <form class="product-form" action="/admin/<% if (!editing) { %>add-product<% } else { %>edit-product/<%= product.id %> <% } %>" method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input class="product-form_input" type="text" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
      </div>
      <div class="form-control">
        <label for="imageUrl">Image URL</label>
        <input class="product-form_input" type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= product.imageUrl %><% } %>">
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea class="product-form_input" type="text" name="description" id="description" rows="5"><% if (editing) { %><%= product.description %><% } %></textarea>
      </div>
      <div class="form-control">
        <label for="price">Price</label>
        <input class="product-form_input" type="number" name="price" id="price" step="0.01" value="<% if (editing) { %><%= product.price %><% } %>">
      </div>
      <% if (editing) { %>
        <input type="hidden" value="<%= product.id %>" name="productId" />
      <% } %>
      <button class="product-form_button" type="submit">
        <% if (editing) { %>
          Update Product
        <% } else { %>
          Add Product 
        <% } %></button>
    </form>
  </main>
<%- include('../global/end.ejs') %>